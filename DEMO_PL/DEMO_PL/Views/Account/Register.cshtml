@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Register</h1>


<<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" method="post">
			<input class="text" asp-for="FName" placeholder="First name" required="">
			<input class="text" asp-for="LName" placeholder="Last name" required="">
			<input class="text"  asp-for="Email" placeholder="Email" required="">
			<input class="text email" asp-for="Password" placeholder="Password" required="">
			<input class="text" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>

