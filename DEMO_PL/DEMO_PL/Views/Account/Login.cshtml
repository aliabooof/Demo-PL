@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>


<<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
		
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<input class="text email" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" >
					<span>Remember me </span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Login">
		</form>
		<p>Dont you have an Account? <a asp-action="Register"> Register Now!</a></p>
	</div>
</div>

