@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Departments";
}

<h1>All Departments</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Department</a> <!-- asp-controller="Department"  im in the same controller no need to this line -->
@if(Model.Count() >0)
{
    <table class="mt-3 table table-striped table-hover">
        <tr>
            <td>@Html.DisplayNameFor(D => D.Code)</td>
            <td>@Html.DisplayNameFor(D => D.Name)</td>
            <td>@Html.DisplayNameFor(D=> D.DateOfCreation)</td>  
            <td>Details</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
            @foreach(var department in Model)
            {
        <tbody>
            <td>@department.Code</td>
            <td>@department.Name</td>
            <td>@department.DateOfCreation.Date</td>
            <td>
                <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                    <i class="fas fa-eye"></i> Details
                    </a>
            </td>

            <td>
                <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">
                    <i class="fas fa-edit"></i> Update
                </a>
            </td>

            <td>
                <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                    <i class="fas fa-eye"></i> Delete
                </a>
            </td>
        </tbody>
            }

    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is no departments</h3>
    </div>
}