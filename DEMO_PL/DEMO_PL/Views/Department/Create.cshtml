@model Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>
<br />
<br />


<form asp-action="Create" >
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code"></span>


    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>


    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" />
        <span asp-validation-for="DateOfCreation"></span>


    </div> 

    <input type="submit" value="Submit" class="btn btn-primary" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-link">Back To List</a>
</form>


@section ValidationScriptSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}